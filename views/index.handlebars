<h1>Eat-Da-Burger</h1>

<h2>Burgers not devoured yet</h2>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.id}}
				{{this.burger_name}}
				{{> update-burger}}
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.id}}
				{{this.burger_name}}
				{{> delete-burger}}
			</li>
		{{/if}}
	{{/each}}
</ul>

<h2>Enter a burger</h2>
{{> add-burger}}